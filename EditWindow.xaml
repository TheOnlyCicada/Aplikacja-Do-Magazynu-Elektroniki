<Window x:Class="AplikacjaDoMagazynu.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplikacjaDoMagazynu"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="0,0,456,109">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Nazwa" HorizontalAlignment="Center" Height="26" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="Edit_NameTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" Width="120" Height="18" VerticalAlignment="Center"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Ilosc" HorizontalAlignment="Center" Height="26" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="Edit_AmountTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" />

            <Label Grid.Row="2" Grid.Column="0" Content="Typ" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="Edit_TypeComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Lokalizacja" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="Edit_LocationTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Notatki" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="Edit_NotesTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>

            <Button Grid.Row="5" Grid.Column="1" Content="Zapisz" HorizontalAlignment="Center" Click="Edit_SaveItem" Width="103"  Height="42" VerticalAlignment="Center"/>
        </Grid>
        
    </Grid>
</Window>
